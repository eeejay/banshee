<?xml version="1.0"?>
<gconfschemafile>
  <schemalist>
    <schema>
      <key>/schemas/apps/banshee/plugins/notification_area/enabled</key>
      <applyto>/apps/banshee/plugins/notification_area/enabled</applyto>
      <owner>banshee</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Plugin enabled</short>
        <long>Notification area plugin enabled</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/banshee/plugins/notification_area/show_notifications</key>
      <applyto>/apps/banshee/plugins/notification_area/show_notifications</applyto>
      <owner>banshee</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Show notifications</short>
        <long>Show track information notifications when track starts playing</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/banshee/plugins/notification_area/notify_on_close</key>
      <applyto>/apps/banshee/plugins/notification_area/notify_on_close</applyto>
      <owner>banshee</owner>
      <type>bool</type>
      <default>true</default>
      <locale name="C">
        <short>Show a notification when closing main window</short>
        <long>When the main window is closed, show a notification stating this has happened.</long>
      </locale>
    </schema>
    <schema>
      <key>/schemas/apps/banshee/plugins/notification_area/quit_on_close</key>
      <applyto>/apps/banshee/plugins/notification_area/quit_on_close</applyto>
      <owner>banshee</owner>
      <type>bool</type>
      <default>false</default>
      <locale name="C">
        <short>Quit on close</short>
        <long>Quit instead of hide to notification area on close</long>
      </locale>
    </schema>
  </schemalist>
</gconfschemafile>
